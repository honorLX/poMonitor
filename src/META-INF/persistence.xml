<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1"
	xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
	<persistence-unit name="poMonitor" transaction-type="RESOURCE_LOCAL">
		<provider>
			org.eclipse.persistence.jpa.PersistenceProvider
		</provider>
		<class>pomonitor.entity.LeverWord</class>
		<class>pomonitor.entity.Sensword</class>
		<class>pomonitor.entity.User</class>
		<class>pomonitor.entity.News</class>
		<class>pomonitor.entity.IdeaWord</class>
		<class>pomonitor.entity.NegWord</class>
		<class>pomonitor.entity.WordProperty</class>
		<class>pomonitor.entity.Emotionalword</class>
		<class>pomonitor.entity.NewsTend</class>
		<class>pomonitor.entity.SynonyMousWord</class>
		<properties>
			<property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver" />
			<property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/pomonitor" />
			<property name="javax.persistence.jdbc.user" value="root" />
			<property name="javax.persistence.jdbc.password" value="123456" />
		</properties>
	</persistence-unit>
</persistence>
